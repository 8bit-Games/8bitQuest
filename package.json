{
  "name": "8bitquest",
  "version": "1.0.0",
  "description": "A modern HTML5/WebSocket multiplayer RPG - Modernized fork of BrowserQuest",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "concurrently \"npm run dev:client\" \"npm run dev:server\"",
    "dev:client": "vite",
    "dev:server": "tsx watch server/js/main.ts",
    "build": "npm run build:client && npm run build:server",
    "build:client": "tsc && vite build",
    "build:server": "tsc -p tsconfig.server.json",
    "preview": "vite preview",
    "start": "node dist/server/main.js",
    "start:dev": "tsx server/js/main.ts",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "prepare": "husky"
  },
  "dependencies": {
    "ws": "^8.18.0",
    "express": "^4.19.2",
    "cors": "^2.8.5",
    "compression": "^1.7.4",
    "helmet": "^7.1.0",
    "winston": "^3.14.2",
    "dotenv": "^16.4.5",
    "validator": "^13.12.0",
    "sanitize-html": "^2.13.0",
    "bson": "^6.8.0"
  },
  "devDependencies": {
    "@types/node": "^20.14.15",
    "@types/express": "^4.17.21",
    "@types/ws": "^8.5.12",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/validator": "^13.12.0",
    "@types/sanitize-html": "^2.11.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitejs/plugin-legacy": "^5.4.1",
    "typescript": "^5.5.4",
    "vite": "^5.4.0",
    "vite-plugin-pwa": "^0.20.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "prettier": "^3.3.3",
    "husky": "^9.1.4",
    "lint-staged": "^15.2.9",
    "concurrently": "^8.2.2",
    "tsx": "^4.17.0",
    "vitest": "^2.0.5",
    "@vitest/ui": "^2.0.5",
    "@vitest/coverage-v8": "^2.0.5"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "game",
    "mmorpg",
    "html5",
    "websocket",
    "canvas",
    "multiplayer",
    "rpg"
  ],
  "author": "Little Workshop (original), Modernized Community Fork",
  "license": "MPL-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/8bit-Games/8bitQuest"
  }
}
